          <Card 	name="Nedjm"   linkedin="https://www.linkedin.com/in/nedjm-eddine-laib-48873925b/"  image="/WhatsApp Image 2024-02-20 at 20_52_37_297df171.webp" />
          <Card 	name="Jivanthika"   linkedin="https://www.linkedin.com/in/jivanthika-venkatakrishnan-24356620a/"   image="/Plant Shadow _edited.webp" />
