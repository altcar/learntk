---
interface Props {
	name: string;
	linkedin: string;
	github: string;
    email: string;
    image: string;
}

const { name, linkedin, github="", email="", image } = Astro.props;

---

<!-- <li class="link-card"> -->
    <div class="link-card">
	<a href={email}>
		<h2>
			{name}
			<!-- <span>&rarr;</span> -->
		</h2>
        <img src={image} alt="">
		<div class="p">
            <a href={linkedin}>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="meteor-icon-kit__solid-linkedin" width="32" height="32">
